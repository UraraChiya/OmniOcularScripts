<oo>
    <tileentity id="botania:pool">
        <line displayname="hud.msg.Botania.Mana">
            return numberWithCommas(nbt.mana) + GRAY + ' / ' + WHITE + numberWithCommas(nbt.manaCap);
        </line>
        <line displayname="hud.msg.common.Mode">
            return translate('hud.msg.Botania.output.' + nbt.outputting);
        </line>
    </tileentity>
    <tileentity id="botania:spreader">
        <line displayname="hud.msg.Botania.Mana">
            return nbt.mana;
        </line>
        <line displayname="botania.entry.lens">
            if (nbt.Items[0]) return name(nbt.Items[0]);
        </line>
    </tileentity>
    <tileentity id="botania:runeAltar">
        <line displayname="hud.msg.Botania.Mana">
            return numberWithCommas(nbt.mana) + GRAY + ' / ' + WHITE + numberWithCommas(nbt.manaToGet);
        </line>
    </tileentity>
    <tileentity id="botania:enchanter">
        <line displayname="hud.msg.Botania.Mana">
            return numberWithCommas(nbt.mana) + GRAY + ' / ' + WHITE + numberWithCommas(nbt.manaRequired);
        </line>
    </tileentity>
    <tileentity id="botania:specialFlower">
        <line displayname="hud.msg.Botania.Mana">
            return nbt.subTileCmp.mana;
        </line>
        <line displayname='hud.msg.common.Info'>
            var results = ['\\n'];

            /* 恒为 0 和不存在则不显示 */
            if (nbt.subTileCmp.passiveDecayTicks) {
                results.push(
                    customLabelFormat(
                        translate('hud.msg.Botania.PassiveDecayTicks'),
                        convertTicksToTime(nbt.subTileCmp.passiveDecayTicks) + ' / 1h 00m 00s'
                    )
                );
            }
            if (nbt.subTileCmp.ticksExisted != undefined) {
                results.push(
                    customLabelFormat(
                        translate('hud.msg.Botania.TicksExisted'),
                        convertTicksToTime(nbt.subTileCmp.ticksExisted)
                    )
                );
            }
            return results.join('\\n  ');
        </line>
    </tileentity>
    <tileentity id="botania:rfGenerator">
        <line displayname="hud.msg.Botania.Mana">
            return (
                numberWithCommas(nbt.mana) +
                GRAY +
                ' / ' +
                WHITE +
                '1280 (' +
                numberWithCommas(nbt.mana) * 10 +
                ' RF)'
            );
        </line>
    </tileentity>
    <tileentity id="botania:spawnerClaw">
        <line displayname="hud.msg.Botania.Mana">
            return numberWithCommas(nbt.mana) + GRAY + ' / ' + WHITE + '160';
        </line>
    </tileentity>
    <entity id="Botania.botania:poolMinecart">
        <line displayname="hud.msg.Botania.Mana">
            return numberWithCommas(nbt.mana) + GRAY + ' / ' + WHITE + '1,000,000';
        </line>
    </entity>
</oo>
